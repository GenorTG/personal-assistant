#!/bin/bash
# Personal Assistant - Simple launcher (opens menu)
# This script opens the launcher menu to choose an action

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Use launcher.sh if it exists, otherwise fallback to start.sh
if [ -f "launcher.sh" ]; then
    exec ./launcher.sh
elif [ -f "start.sh" ]; then
    exec ./start.sh
else
    # Fallback: direct launch
    cd "$SCRIPT_DIR/electron-app"
    if [ ! -d "node_modules" ]; then
        echo "âš  Dependencies not found. Please run ./install.sh first"
        exit 1
    fi
    npm start
fi
